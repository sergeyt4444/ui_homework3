{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2015",
    "moduleResolution": "Node",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "typeRoots" : ["./node_modules/@types"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude" : [
    "src/**/*.spec.ts"
  ]
}
